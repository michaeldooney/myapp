<%= form_with(model: user, local: true, html: {class: 'form-group'}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-inline">
    <%= form.label :first_name, class: 'col-md-1 col-sm-2' %>
    <%= form.text_field :first_name, class: "form-control form-control-sm col-md-3 col-sm-4", placeholder: "First Name" %>
  </div>

  <div class="field form-inline">
    <%= form.label :last_name, class: 'col-md-1 col-sm-2' %>
    <%= form.text_field :last_name, class: "form-control form-control-sm col-md-3 col-sm-4", placeholder: "Last Name" %>
  </div>

  <div class="actions">
    <%= form.submit "Send", class: 'btn btn-outline-danger btn-sm my-2 my-sm-0' %>
  </div>
<% end %>
