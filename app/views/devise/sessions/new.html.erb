<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-inline">
    <%= f.label :email, class: 'col-md-1 col-sm-2' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm col-md-3 col-sm-4" %>
  </div>

  <div class="field form-inline">
    <%= f.label :password, class: 'col-md-1 col-sm-2' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm col-md-3 col-sm-4" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-inline">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-outline-danger btn-sm my-2 my-sm-0' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
